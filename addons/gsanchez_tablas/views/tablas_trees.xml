<odoo>
	<data>
		<!-- Tipos de documentos -->
		<record id = "tree_tipo_documento" model = "ir.ui.view">
			<field name = "name">Tipos de documentos</field>
			<field name = "model">tipo.documento</field>
			<field name = "arch" type = "xml">
				<tree>
					<field name = "name" />
					<field name = "descripcion" />
					<field name = "abreviatura" />
				</tree>
			</field>
		</record>
		
		<!-- Tipos de documentos de identidad -->
		<record id = "tree_tipo_documento_identidad" model = "ir.ui.view">
			<field name = "name">Tipos de documentos de identidad</field>
			<field name = "model">tipo.documento.identidad</field>
			<field name = "arch" type = "xml">
				<tree>
					<field name = "name" />
					<field name = "descripcion" />
					<field name = "abreviatura" />
				</tree>
			</field>
		</record>
		
		<!-- Formas de pago -->
		<record id = "tree_forma_pago" model = "ir.ui.view">
